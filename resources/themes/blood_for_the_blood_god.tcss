/*
 * Blueprint UI â€” Blood for the Blood God Theme
 * A monochrome blood red theme.
 *
 * This file consolidates all TUI screen styles into a single theme file.
 * Color variables ($primary, $surface, etc.) are provided by Textual's
 * built-in design system and overridden via App.design in bpui/tui/app.py.
 */

/* =========================================================================
 * Global / App
 * ========================================================================= */

Screen {
    background: $surface;
}

/* =========================================================================
 * HomeScreen
 * ========================================================================= */

HomeScreen {
    align: center middle;
}

HomeScreen #home-container {
    width: 60;
    height: auto;
    border: solid $primary;
    padding: 2;
}

HomeScreen .title {
    content-align: center middle;
    text-style: bold;
    color: $primary;
    margin-bottom: 1;
}

HomeScreen .subtitle {
    content-align: center middle;
    color: $text-muted;
    margin-bottom: 2;
}

HomeScreen Button {
    width: 100%;
    margin-bottom: 1;
}

/* =========================================================================
 * SettingsScreen
 * ========================================================================= */

SettingsScreen {
    align: center middle;
}

SettingsScreen #settings-container {
    width: 80;
    height: 100%;
    border: solid $primary;
    padding: 2;
}

SettingsScreen .title {
    content-align: center middle;
    text-style: bold;
    color: $primary;
    margin-bottom: 2;
    margin-top: 1;
}

SettingsScreen .subtitle {
    content-align: center middle;
    color: $text-muted;
    margin-bottom: 1;
}

SettingsScreen .field-label {
    margin-top: 1;
    margin-bottom: 0;
    color: $text;
}

SettingsScreen Input,
SettingsScreen Select {
    width: 100%;
    margin-bottom: 1;
}

SettingsScreen .button-row {
    layout: horizontal;
    width: 100%;
    height: auto;
    margin-top: 2;
}

SettingsScreen .button-row Button {
    width: 1fr;
    margin-right: 1;
}

SettingsScreen .status {
    margin-top: 1;
    text-align: center;
    color: $success;
}

SettingsScreen .error {
    color: $error;
}

/* =========================================================================
 * CompileScreen
 * ========================================================================= */

CompileScreen {
    layout: vertical;
}

CompileScreen #compile-container {
    height: 100%;
    width: 100%;
    padding: 1;
}

CompileScreen .title {
    content-align: center middle;
    text-style: bold;
    color: $primary;
    margin-bottom: 1;
}

CompileScreen .field-label {
    margin-top: 1;
    margin-bottom: 0;
}

CompileScreen Input,
CompileScreen Select {
    width: 100%;
    margin-bottom: 1;
}

CompileScreen .button-row {
    layout: horizontal;
    width: 100%;
    height: auto;
