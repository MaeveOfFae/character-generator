}

CompileScreen .button-row Button {
    width: 1fr;
    margin-right: 1;
}

CompileScreen #output-log {
    height: 1fr;
    border: solid $primary;
    margin-bottom: 1;
}

CompileScreen .status {
    text-align: center;
    color: $text-muted;
}

CompileScreen .error {
    color: $error;
}

/* =========================================================================
 * ReviewScreen
 * ========================================================================= */

ReviewScreen {
    layout: vertical;
}

ReviewScreen #review-container {
    height: 100%;
    width: 100%;
    padding: 1;
}

ReviewScreen .title {
    content-align: center middle;
    text-style: bold;
    color: $primary;
    margin-bottom: 1;
}

ReviewScreen #metadata-section {
    layout: horizontal;
    height: auto;
    padding: 1;
    border: solid $accent;
    margin-bottom: 1;
}

ReviewScreen #metadata-info {
    width: 2fr;
}

ReviewScreen #metadata-buttons {
    width: 1fr;
    layout: horizontal;
}

ReviewScreen #metadata-buttons Button {
    margin-left: 1;
}

ReviewScreen .favorite-star {
    color: $warning;
}

ReviewScreen #main-split {
    width: 100%;
    height: 1fr;
    layout: horizontal;
}

ReviewScreen #left-panel {
    width: 100%;
    layout: vertical;
}

ReviewScreen #tabs {
    height: 1fr;
    margin-bottom: 1;
}

ReviewScreen TextArea {
    height: 1fr;
    width: 100%;
}

ReviewScreen .button-row {
    layout: horizontal;
    width: 100%;
    height: auto;
    margin-bottom: 1;
}

ReviewScreen .button-row Button {
    width: 1fr;
    margin-right: 1;
}

ReviewScreen #validation-log {
    height: 10;
    border: solid $primary;
    margin-bottom: 1;
}

ReviewScreen .status {
    text-align: center;
    color: $text-muted;
}

ReviewScreen .error {
    color: $error;
}

ReviewScreen .success {
    color: $success;
}

ReviewScreen .dirty {
    color: $warning;
}

ReviewScreen #chat-panel {
    width: 30%;
    border-left: solid $primary;
    padding: 1;
}

ReviewScreen #chat-panel.hidden {
    display: none;
}

ReviewScreen #chat-log {
    height: 1fr;
    border: solid $accent;
    margin-bottom: 1;
}

ReviewScreen #chat-input {
    width: 100%;
    margin-bottom: 1;
}

